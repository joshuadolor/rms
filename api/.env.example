APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
# Frontend app URL (for password reset link in email, and CORS in dev)
FRONTEND_URL=http://localhost:8080
# Script URL for public restaurant page (Vue app). Default: FRONTEND_URL + /src/main.js. Production: set to built asset URL.
# FRONTEND_PUBLIC_SCRIPT=http://localhost:8080/src/main.js

# Root domain for restaurant subdomains: [slug].RESTAURANT_DOMAIN (e.g. rms.local â†’ test.rms.local). Add *.rms.local to hosts for local dev.
# Production: set to your domain (e.g. menus.example.com) and add wildcard DNS (*.menus.example.com).
RESTAURANT_DOMAIN=localhost
# CORS: comma-separated origins allowed to call the API (production). In local env, dev origins are allowed by default.
# CORS_ALLOWED_ORIGINS=https://app.example.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Docker / local dev: MySQL (docker-compose uses DB_HOST=mysql, DB_DATABASE=rms, DB_USERNAME=rms, DB_PASSWORD=rms_secret)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms
DB_USERNAME=rms
DB_PASSWORD=rms_secret

# Optional: use SQLite instead (e.g. run api without Docker). Uncomment and set DB_CONNECTION=sqlite, DB_DATABASE=storage/db/database.sqlite
# DB_CONNECTION=sqlite
# DB_DATABASE=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail: use "log" to write to storage/logs; use "smtp" + Mailhog to catch mail in dev.
# Mailhog (local): SMTP 127.0.0.1:1025, web UI http://localhost:8025. Run: mailhog (or docker run -p 1025:1025 -p 8025:8025 mailhog/mailhog).
# To use Mailhog set: MAIL_MAILER=smtp, MAIL_HOST=127.0.0.1, MAIL_PORT=1025, MAIL_ENCRYPTION=null (values below).
# Docker with mailhog service: use MAIL_HOST=mailhog (config will force SMTP port 1025 and no encryption).
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Translation (LibreTranslate). Leave empty to use stub (no external calls).
# TRANSLATION_DRIVER=stub
# LIBRE_TRANSLATE_URL=https://libretranslate.com
# LIBRE_TRANSLATE_API_KEY=

# Superadmin (set before go-live; seeder creates/updates user with this email and password)
# Example (dev): admin@admin.com / p@55w0rd123!
SUPERADMIN_EMAIL=
SUPERADMIN_PASSWORD=

# OAuth (for social login: Google, Facebook, Instagram)
# Frontend does the OAuth redirect; backend uses these to verify tokens.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Docker Compose environment variables (project root, next to docker-compose.yml).
# Copy to .env and edit. Used when you run: docker compose up
# https://docs.docker.com/compose/environment-variables/env-file/

# ---- App ----
APP_NAME=Techaurant
APP_URL=http://rms.local
FRONTEND_URL=http://rms.local
RESTAURANT_DOMAIN=rms.local

# ---- MySQL (mysql service + api + phpMyAdmin) ----
MYSQL_DATABASE=rms
MYSQL_USER=rms
MYSQL_PASSWORD=rms_secret
MYSQL_ROOT_PASSWORD=root_secret

# ---- API (Laravel) ----
# DB_* are passed to the api service; entrypoint also forces these for the app.
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms
DB_USERNAME=rms
DB_PASSWORD=rms_secret

# Mail (api uses mailhog in Docker)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@rms.local
MAIL_FROM_NAME=RMS

# ---- Frontend (Vite) ----
VITE_PROXY_TARGET=http://api:3000
VITE_API_URL=
VITE_APP_PUBLIC_DOMAIN=rms.local

# frontend
DEFAULT_LANGUAGE=en
LANGUAGES=en,es,zh,fil,de,fr,uk,ru,ja,nl,ar
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@rms.local
MAIL_FROM_NAME=RMS


LIBRE_TRANSLATE_URL=http://libretranslate:5000
LIBRE_TRANSLATE_API_KEY=
TRANSLATION_DRIVER=libre
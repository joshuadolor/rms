# Single source for Docker Compose and the API (project root, next to docker-compose.yml).
# Copy to .env and edit. When you run "docker compose up", Compose and the API container both use this file.
# https://docs.docker.com/compose/environment-variables/env-file/

# ---- App (Laravel) ----
APP_NAME=RMS
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://rms.local
FRONTEND_URL=http://rms.local
RESTAURANT_DOMAIN=rms.local

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ---- Database (MySQL container + Laravel API) ----
# In Docker use DB_HOST=mysql. On host use DB_HOST=127.0.0.1 and run "docker compose up -d mysql".
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms
DB_USERNAME=rms
DB_PASSWORD=rms_secret
# MySQL container root user (not used by Laravel)
MYSQL_ROOT_PASSWORD=root_secret

# ---- Laravel (session, cache, queue use DB) ----
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
CACHE_STORE=database
QUEUE_CONNECTION=database

# ---- Mail (API uses Mailhog in Docker) ----
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@rms.local
MAIL_FROM_NAME=RMS

# ---- Frontend (Vite in Docker) ----
VITE_PROXY_TARGET=http://api:3000
VITE_API_URL=
VITE_APP_PUBLIC_DOMAIN=rms.local

# ---- Machine translation (LibreTranslate) ----
# Required for translate API; run the libretranslate container (see docker-compose).
# First start can take 1â€“2 min while models load; translation returns 502 until ready.
TRANSLATION_DRIVER=libre
LIBRE_TRANSLATE_URL=http://libretranslate:5000
LIBRE_TRANSLATE_API_KEY=

# ---- Frontend (Vite) ----
# Main app UI language (en, es, ar). User can change via dropdown; selection is stored in browser.
VITE_DEFAULT_LOCALE=en
DEFAULT_LANGUAGE=en
LANGUAGES=en,es,zh,fil,de,fr,uk,ru,ja,nl,ar

# Refresh cookie: set .rms.local when using rms.local in the browser; leave empty when using localhost (so cookie is sent on refresh).
REFRESH_TOKEN_COOKIE_DOMAIN=.rms.local

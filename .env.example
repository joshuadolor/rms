# Single source for Docker Compose and the API (project root, next to docker-compose.yml).
# Copy to .env and edit. When you run "docker compose up", Compose and the API container both use this file.
# https://docs.docker.com/compose/environment-variables/env-file/

# ---- App (Laravel) ----
APP_NAME=RMS
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://rms.local
FRONTEND_URL=http://rms.local
RESTAURANT_DOMAIN=rms.local

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ---- MySQL (mysql service + API) ----
# In Docker, API uses DB_HOST=mysql (set by compose). On host, use DB_HOST=127.0.0.1 and run "docker compose up -d mysql".
MYSQL_DATABASE=rms
MYSQL_USER=rms
MYSQL_PASSWORD=rms_secret
MYSQL_ROOT_PASSWORD=root_secret

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms
DB_USERNAME=rms
DB_PASSWORD=rms_secret

# ---- Laravel (session, cache, queue use DB) ----
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
CACHE_STORE=database
QUEUE_CONNECTION=database

# ---- Mail (API uses Mailhog in Docker) ----
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@rms.local
MAIL_FROM_NAME=RMS

# ---- Frontend (Vite in Docker) ----
VITE_PROXY_TARGET=http://api:3000
VITE_API_URL=
VITE_APP_PUBLIC_DOMAIN=rms.local

# ---- Machine translation (LibreTranslate) ----
# LibreTranslate is free and open-source. Run the libretranslate container (see docker-compose) and point the API at it.
# When you host this project, keep LibreTranslate in your stack â€” no API key needed.
# TRANSLATION_DRIVER=libre
# LIBRE_TRANSLATE_URL=http://libretranslate:5000
# LIBRE_TRANSLATE_API_KEY=   (leave empty; only needed if you use a third-party LibreTranslate API that requires a key)

# ---- Frontend (Vite) ----
DEFAULT_LANGUAGE=en
LANGUAGES=en,es,zh,fil,de,fr,uk,ru,ja,nl,ar
